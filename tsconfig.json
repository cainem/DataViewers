{
  "compilerOptions": {
    "target": "es5",
    "module": "commonjs",
    "moduleResolution": "node",
    "sourceMap": true,
    "emitDecoratorMetadata": true,
    "experimentalDecorators": true,
    "removeComments": false,
    "noImplicitAny": false,
    "strictNullChecks": true,
    "skipLibCheck": true,
    "outDir" : "./app",
    "typeRoots" : [
      "./node_modules/@types"
    ]
  },
  "compileOnSave": true,
  "include" : [
    //"source/**/*"
    //"typings/d3/index.d.ts"
  ],
  "exclude": [    
    "node_modules/*",
    "**/*-aot.ts"    
  ]
}