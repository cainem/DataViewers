{
    // Use IntelliSense to learn about possible Node.js debug attributes.
    // Hover to view descriptions of existing attributes.
    // For more information, visit: https://go.microsoft.com/fwlink/?linkid=830387
    "version": "0.2.0",
    "configurations": [
        {
            "name": "Launch localhost - server must be running",
            "type": "chrome",
            "request": "launch",
            "url": "http://localhost:3000/built/index.html",
            "verboseDiagnosticLogging": true,
            "sourceMaps": true,
            "webRoot": "${workspaceRoot}"
        },
        {
            "name": "Launch tests - karma server must be running",
            "type": "chrome",
            "request": "attach",
            "port" : 9222,
            "verboseDiagnosticLogging": true,
            "sourceMaps": true,
            "webRoot": "${workspaceRoot}/built/"
        }
    ]
}